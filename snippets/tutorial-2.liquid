{%- assign stock_quantity = 0 -%}

{%- if stock_quantity > 10 -%}
  <p class="stock-status in-stock">Còn hàng: {{ stock_quantity }} sản phẩm</p>
{%- elsif stock_quantity > 0 -%}
  <p class="stock-status low-stock">Sắp hết hàng: Chỉ còn {{ stock_quantity }} sản phẩm</p>
{%- else -%}
  {% assign alert = "hết hàng nha" %}
  <p class="stock-status out-of-stock">{{ alert }}</p>
{%- endif -%}

<p>----------------1-----------</p>

{{product.tags}}
{% if product.tags contains "Accessory" %}
  <p>có tag Accessory</p>
{% else %}
  <p>không có tag Accessory</p>
{% endif %}

{% unless product.tags contains "Accessory1" %}
  <p>không có tag Accessory1</p>
{% endunless %}

<p>----------------2-----------</p>
{{ product.price }}
{% assign condition = false %}
{% if 1 == 1 or 2 == 2 %}
  {% assign condition = true %}
{% endif %}
{% if condition and product.price < 200000 %}
  <p>1 == 1 or 2 == 2 - Giá sản phẩm: {{ product.price | money }}</p>
{% endif %}

<p>----------------3-----------</p>
{% assign product_type = product.type %}
{% case product_type %}
  {% when "Shirts" %}
    <p class="product-category">Danh mục: Áo sơ mi</p>
    <p class="category-info">Miễn phí vận chuyển cho đơn hàng trên 500.000đ</p>
  {% when "Shoes" %}
    <p class="product-category">Danh mục: Giày dép</p>
    <p class="category-info">Đổi trả trong vòng 30 ngày</p>
  {% when "Accessories" %}
    <p class="product-category">Danh mục: Phụ kiện</p>
    <p class="category-info">Tặng kèm hộp đựng cao cấp</p>
  {% else %}
    <p class="product-category">Danh mục: Sản phẩm khác</p>
{% endcase %}




